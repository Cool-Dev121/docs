@import './reset.styl'
@import './fonts.styl'

html, body
  font-family 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  font-weight 400
  color #444

h1, h2, h3, h4, h5, h6
  font-family 'ProximaNova-Semibold'
  font-weight 200

#wrap
  padding-top 100px
  padding-left 250px
  height 100%

#header
  position fixed
  top 0
  left 0
  width 100%
  height 100px

#sidebar
  position fixed
  top 100px
  left 0
  bottom 0
  width 250px
  padding 20px 30px
  overflow-x hidden
  overflow-y scroll

#content
  padding 20px 30px

// components
@import './header.styl'
@import './sidebar.styl'
@import './content.styl'
